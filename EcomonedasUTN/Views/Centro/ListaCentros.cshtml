@model IEnumerable<EcomonedasUTN.Models.Centro>

@{
    ViewBag.Title = "ListaCentros";
}

<div class="container">
    <h2>Materiales Reciclables</h2>

    @using (Ajax.BeginForm("filtrarCentrosAjax", "Centro", new AjaxOptions
    {
        HttpMethod = "GET",
        UpdateTargetId = "divCentro",
        InsertionMode = InsertionMode.Replace

    }))
    {
        <div class="form-horizontal">
            <div class="form-group">
                Buscar:
                @Html.TextBox("terminoBusqueda", "", new { @class = "form-control", @placeholder = "Criterio de búsqueda" })
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-info" />
            </div>
        </div>
    }

    <div id="divCentro" class="row">
        @foreach (var item in Model)
        {
            <div class="card mb-3" style="margin: 38px;min-width: 300px;max-width: 300px">
                <h3 class="card-header bg-secondary" style="text-align:center;color: white">@item.nombre</h3>
                <div class="card-body" style="text-align:center">
                    Encargado: <h5>  @item.Usuario.nombre </h5>
                </div>
                <div class="card-body" style="text-align:center">
                    Provincia:<h5>@item.provincia</h5>
                </div>
                <div class="card-body" style="text-align:center">
                    Dirección: <h5>  @item.direccion </h5>
                </div>
                <div class="card-body" style="text-align: center">
                    @Html.ActionLink("Detalles", "Details", "Centro", new { id = item.id }, htmlAttributes: new { @class = "btn btn-secondary btn-block" })
                </div>
            </div>
        }
    </div>
</div>


