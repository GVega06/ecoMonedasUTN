@model EcomonedasUTN.Models.Usuario

@{
    ViewBag.Title = "InicioSesion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("InicioSesion", "Usuario", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div style="width:50%;margin-left:auto;margin-right:auto">
        <h2 style="margin-top:50px">Iniciar Sesión</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h6 style="margin-left:20px">Correo Electrónico</h6>
            <div class="col-md-12">
                @Html.TextBox("email","",new {@class = "form-control" })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h6 style="margin-left:20px;margin-top: 30px;">Contraseña</h6>
            <div class="col-md-12">
                @Html.Password("clave","",new {@class= "form-control" })
                
                @Html.ValidationMessageFor(model => model.clave, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Iniciar" class="btn btn-info btn-block" style="margin-top:30px"/>

                @Html.ActionLink("¿No te has registrado?", "Create", "Usuario", new { }, htmlAttributes: new { @class = "nav-link" })
            </div>
        </div>
    </div>
}

<div>
    @if (ViewBag.MensajeUser != "" && ViewBag.MensajeUser != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>@ViewBag.MensajeUser</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
</div>