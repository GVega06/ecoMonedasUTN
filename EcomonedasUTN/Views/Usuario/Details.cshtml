@model EcomonedasUTN.Models.Usuario

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-top:50px">Detalle</h2>

<div>
    <h4>Información de Usuario</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.email)
        </dt>

        <dd>
            @ViewData["email"]            
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.nombre)
        </dt>

        <dd>
           @ViewData["nombre"] 
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.clave)
        </dt>

        <dd>
            @ViewData["clave"]
            
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.telefono)
        </dt>

        <dd>
            @ViewData["telefono"]
            
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.direccion)
        </dt>

        <dd>
            @ViewData["direccion"]
            
        </dd>
   
    </dl>
        
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = @ViewData["email"] }, new { @class = "btn btn-outline-success" }) |
    @Html.ActionLink("Regresar", "Index", new { }, new { @class = "btn btn-outline-success" })
</p>


