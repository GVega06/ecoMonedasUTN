
    @{
        ViewBag.Title = "Reporte Estadistica";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    
      

    @using (Ajax.BeginForm("reporteEstadistica", "EncCambio", new AjaxOptions
    
    {
        UpdateTargetId = "divFecha", // <-- ID de elemento DOM para actualiza
        InsertionMode = InsertionMode.Replace, // <-- Reemplazar el contenido del elemento DOM
        HttpMethod = "GET", // <-- Método HTTP
    }))
    {
        <div class="container">
            <h2 style="margin-top:50px">Reporte Estadística de Eco Monedas por Centro de Acopio</h2>
            
            <div class="row">
                <div class="col-md-1" style="margin-top: 25px">
                    <label >Filtrar:</label>
                </div>
                <div class="col-md-1" style="margin-top: 25px">
                    <label style="margin-left:50%">Desde</label>
                </div>
                <div class="col-md-2" style="margin-top:25px; margin-right:100px">
                    @Html.TextBox("fechaAnterior", "", new { @class = "input-group-text", type = "date", @style = "margin-left:10%", @required ="required" })
                </div>
                <div class="col-md-1" style="margin-top: 25px">
                    <label>Hasta:</label>
                </div>
                <div class="col-md-2" style="margin-top:25px">
                    @Html.TextBox("fechaActual", "", new { @class = "input-group-text", type = "date", @style = "margin-left:10%", @required = "required" })
                </div>         
                <div class="col-md-3" style="margin-top: 23px;">
                    <input type="submit" value="Generar Reporte" class="btn btn-info" style="margin-left: 40%"/>
                </div>       
            </div>
        </div>
    }
       
<div class="container">
    <div id="divFecha" style="margin-top: 50px;">

    </div>
</div>


