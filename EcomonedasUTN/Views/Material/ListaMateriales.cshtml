@model IEnumerable<EcomonedasUTN.Models.Material>

@{
    ViewBag.Title = "Materiales Reciclables";
}




<div class="container">
    <h2>Materiales</h2>
    @using (Ajax.BeginForm("filtrarMaterialesAjax", "Material", new AjaxOptions
    {
        HttpMethod = "GET",
        UpdateTargetId = "divMateriales",
        InsertionMode = InsertionMode.Replace
    }))
    {
        <div class="form-horizontal">
            <div class="form-group">
                Buscar:
                @Html.TextBox("terminoBusqueda", "", new { @class = "form-control", @placeholder = "Criterio de búsqueda" })
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-info" />
            </div>
        </div>
    }

    <div id="divMateriales" class="row">
        @foreach (var item in Model)
        {
            <div class="card mb-3" style="margin: 38px">
                <h3 class="card-header" style="text-align: center;background:@item.color ">@item.nombre</h3>
                <img width="300px" src="@Url.Action("getImage", "Material", new {id=item.id})">
                <div class="card-body" style="text-align:center">
                    <h4>@String.Format("₡{0:0}", item.precio)</h4>
                </div>
                <div class="card-body" style="text-align: center">
                    @Html.ActionLink("Detalles", "Details", "Material", new { id = item.id }, htmlAttributes: new { @class = "btn btn-info btn-block" })
                </div>
            </div>
        }
    </div>
</div>
